{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "removeComments": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "paths": {
      "@prpl/*": ["packages/*/dist"]
    },
    "incremental": true
  },
  "exclude": ["**/node_modules", "**/dist"]
}
